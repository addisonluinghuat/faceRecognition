<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.181" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cv.FaceDetectionController">
	<top>
		<VBox>
			<HBox alignment="CENTER" spacing="10">
				<padding>
					<Insets bottom="10" top="10" />
				</padding>
				<CheckBox fx:id="haarClassifier" onAction="#haarSelected" text="Haar Classifier" />
				<CheckBox fx:id="lbpClassifier" onAction="#lbpSelected" text="LBP Classifier" />
			</HBox>
			<Separator />
		</VBox>
	</top>
	<center>
		<VBox alignment="CENTER">
			<padding>
				<Insets left="10" right="10" />
			</padding>
			<ImageView fx:id="originalFrame" />
		</VBox>
	</center>
	<bottom>
		<HBox alignment="BASELINE_CENTER" prefHeight="600.0" prefWidth="563.0">
			<padding>
				<Insets bottom="25" left="25" right="25" top="25" />
			</padding>
   			<Button fx:id="cameraButton" disable="true" layoutX="-100.0" onAction="#startCamera" prefWidth="95.0" text="start camera" />
		</HBox>
	</bottom>
</BorderPane>
